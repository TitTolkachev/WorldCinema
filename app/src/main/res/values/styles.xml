<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="homeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="profileItemBtnStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColorHint">@color/gray_a8_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="movie_title_text_style">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movie_description_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="movie_episode_item_text_style">
        <item name="android:textColor">@color/gray_af_text</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>