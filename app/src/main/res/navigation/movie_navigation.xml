<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_navigation"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.worldcinema.ui.screen.movie.movie.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_episodeFragment"
            app:destination="@id/episodeFragment" />
        <argument
            android:name="movieData"
            app:argType="com.example.worldcinema.ui.model.Movie" />
    </fragment>
    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.worldcinema.ui.screen.movie.episode.EpisodeFragment"
        android:label="fragment_episode"
        tools:layout="@layout/fragment_episode" >
        <argument
            android:name="movie"
            app:argType="com.example.worldcinema.ui.model.Movie" />
        <argument
            android:name="episode"
            app:argType="com.example.worldcinema.ui.model.MovieEpisode" />
        <argument android:name="episodesCount"
            app:argType="integer" />
        <argument
            android:name="movieYears"
            app:argType="string" />
    </fragment>
</navigation>